{
    admin off
}

mietrecht {
    tls internal
    encode gzip
    handle_path /smartlaw-agent* {
        reverse_proxy app:5000
    }
    handle /static* {
        reverse_proxy app:5000
    }
    handle /.well-known/* {
        reverse_proxy app:5000
    }
    handle / {
        redir /smartlaw-agent 308
    }
}

