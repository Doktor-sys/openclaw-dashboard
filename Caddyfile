    }
    handle /static* {
        reverse_proxy https://jurismind-mietrecht-777379434356.europe-west1.run.app {
            header_up Host {http.request.host}
        }
    }
    handle /.well-known/* {
        reverse_proxy https://jurismind-mietrecht-777379434356.europe-west1.run.app {
            header_up Host {http.request.host}
        }
    }
    handle / {
        redir /smartlaw-agent 308
    }
}

